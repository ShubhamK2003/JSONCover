  "$id": "http://pwall.net/test/schema/person",
  "title": "Person",
  "description": "A class to represent a person",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": {
      "$ref": "http://pwall.net/test/schema/utility#/$defs/personId",
